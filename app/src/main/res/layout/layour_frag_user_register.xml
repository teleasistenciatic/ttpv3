<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="50dp"
    tools:context="com.local.android.teleasistenciaticplus.fragment.fragUserRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/user_register_porfavor_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_register_porfavor_label"></TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/user_register_nombre_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/user_options_nombre">

        </TextView>

        <EditText
            android:id="@+id/user_register_datos_personales_nombre_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"></EditText>

        <TextView
            android:id="@+id/user_register_apellidos_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/user_options_apellidos">

        </TextView>

        <EditText
            android:id="@+id/user_register_datos_personales_apellidos_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"></EditText>


        <Button
            android:id="@+id/user_register_datos_personales_aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:onClick="user_register_datos_personales_aceptar"
            android:text="Aceptar" />
    </LinearLayout>


</FrameLayout>
